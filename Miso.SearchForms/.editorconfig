# EditorConfig is awesome:http://EditorConfig.org

# top-most EditorConfig file
root = true

# Code files
[*.{cs,csx,vb,vbx}]
indent_style = tab

# Xml project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_style = space
indent_size = 2

# Xml config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_size = 2

[*.{xml,xaml}]
indent_style = space
indent_size = 4